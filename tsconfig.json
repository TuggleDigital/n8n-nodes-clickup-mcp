{
  "compilerOptions": {
    "lib": ["es2019"],
    "types": ["node"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strict": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist/",
    "target": "es2019",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["credentials/**/*", "nodes/**/*", "nodes/**/*.json", "package.json"],
  "exclude": ["node_modules/**/*", "**/*.spec.ts"]
}